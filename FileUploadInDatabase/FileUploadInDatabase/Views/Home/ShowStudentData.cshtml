@model List<FileUploadInDatabase.Models.Student>

@{
    ViewBag.Title = "Student Table";
    //Layout = null;
}

<h1 style="color:darkmagenta; text-align:center;">Student Information</h1><br>
<div style="margin-left:5%; margin-right:5%; margin-top:5%; margin-bottom:5%;">

    <table class="table text-center">
        <thead>
            <tr>
                <td style="color:blue; font-weight:bolder;">Name</td>
                <td style="color:blue; font-weight:bolder;">E-Mail</td>
                <td style="color:blue; font-weight:bolder;">Resume</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td style="color:red;">
                        No Match
                    </td>
                </tr>
            }
            else
            {
                foreach (var x in Model)
                {
                    <tr>
                        <td>@x.name</td>


                        <td>@x.email</td>


                        <td><a href="@Url.Action("ShowFile", "Home", new { @Id = x.Id})">Download</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
